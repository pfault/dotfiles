[general]
accounts = accountname
ui = ttyui

[Account accountname]
localrepository = accountname-local
remoterepository = accountname-remote
autorefresh = 0.5
quick = 10
newmail_hook = ~/bin/mail.sh
postsynchook = ~/bin/mail.sh

[Repository accountname-local]
type = Maildir
localfolders = ~/mail/accountname
# Spaces in pathname are bad. Lets use `archive` which is a simple word
# Besides, we only need `All Mail` folder. 
# Sup would manage mails on its own.
# If your GMail language setting is not English, you can execute 
# `offlineimap --info` to find out the name of folder which is 
# translated and encoded after your account is configured.
nametrans = lambda folder: {'archive': '[Gmail]/All Mail',}.get(folder, folder)

[Repository accountname-remote]
# IMAP with hardcoded GMail config
type = Gmail
realdelete = no
# The path of ca-certfile might be different on your system.
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
# Remember that GMail requires full mail address as username
remoteuser = account@serv.tld
remotepass = pwhere
nametrans = lambda folder:	re.sub('\[Gmail\]\/All Mail', 'archive',
				re.sub('\[Gmail\]\/Drafts', 'drafts',
				re.sub('\[Gmail\]\/Important', 'important',
				re.sub('\[Gmail\]\/Sent Mail', 'sent',
				re.sub('\[Gmail\]\/Spam', 'spam',
				re.sub('\[Gmail\]\/Starred', 'flagged',
				re.sub('\[Gmail\]\/Trash', 'trash',
				re.sub('INBOX', 'INBOX',
				re.sub('Misc', 'misc',
				re.sub('Priority', 'priority',
				re.sub('Follow up', 'follow_up', folder)))))))))))
folderfilter = lambda folder: folder in ['[Gmail]/All Mail', '[Gmail]/Drafts',
					 '[Gmail]/Important', '[Gmail]/Sent Mail',
					 '[Gmail]/Spam', '[Gmail]/Starred',
					 '[Gmail]/Trash', 'INBOX']
# Or, if you have a lot of mail and don't want to wait for a long time before
# using sup, you can archive all your old mails on Gmail and only sync the
# inbox with the following line replacing the previous `folderfilter` line:
# folderfilter = lambda folder: folder == 'INBOX'
